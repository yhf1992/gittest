{
  "name": "xianxia-minirpg",
  "version": "1.0.0",
  "description": "Xianxia mini-RPG full-stack application",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm run install:shared && npm run install:server && npm run install:client",
    "install:shared": "cd shared && npm install",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:shared && npm run build:server && npm run build:client",
    "build:shared": "cd shared && npm run build",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "test": "npm run test:shared && npm run test:server && npm run test:client",
    "test:shared": "cd shared && npm test",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:shared && npm run lint:server && npm run lint:client",
    "lint:shared": "cd shared && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "lint:fix": "npm run lint:fix:shared && npm run lint:fix:server && npm run lint:fix:client",
    "lint:fix:shared": "cd shared && npm run lint:fix",
    "lint:fix:server": "cd server && npm run lint:fix",
    "lint:fix:client": "cd client && npm run lint:fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "clean": "npm run clean:shared && npm run clean:server && npm run clean:client",
    "clean:shared": "cd shared && npm run clean",
    "clean:server": "cd server && npm run clean",
    "clean:client": "cd client && npm run clean",
    "db:migrate": "cd server && npm run db:migrate",
    "db:generate": "cd server && npm run db:generate",
    "db:studio": "cd server && npm run db:studio",
    "db:seed": "cd server && npm run db:seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}